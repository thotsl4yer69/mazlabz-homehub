# Home Hub Configuration
# Copy this to .env and adjust values as needed

# Timezone
TZ=Australia/Melbourne

# User/Group IDs (use 'id -u' and 'id -g' on Linux)
PUID=1000
PGID=1000

# Ports
HTTP_PORT=8080
HABRIDGE_PORT=8080
STEP_PORT=8000

# Data root path (Windows: M:\homehub, Linux: /home/hub/data)
DATA_ROOT=./

# Plex claim token (optional - get from https://plex.tv/claim)
PLEX_CLAIM=

# Cloudflare tunnel token (optional - for remote access)
CLOUDFLARED_TUNNEL_TOKEN=